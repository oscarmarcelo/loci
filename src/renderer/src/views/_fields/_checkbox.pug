template#checkbox
  .checkable
    label.checkable__control
      input.checkable__reference(type="checkbox")

      .checkable__mask
        +icon('check').checkable__icon

      .checkable__label

    small.checkable__description

    //- Used as replacement when the checkbox is not checked, since form submission doesn't collect it when unchecked.
    input.checkable__replacement-reference(type="hidden" value="off" disabled)
